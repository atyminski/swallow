<div class="row">
    <div class="col-1">
        <button class="btn btn-outline-primary w-100" @onclick="PreviousDay">
            <span class="oi oi-chevron-left" aria-hidden="true"></span>
        </button>
    </div>
    <div class="col-10">
        <button class="btn btn-primary w-100">
            @Current.ToString("dd MMMM yyyy")
        </button>
    </div>
    <div class="col-1">
        <button class="btn btn-outline-primary w-100" @onclick="NextDay">
            <span class="oi oi-chevron-right" aria-hidden="true"></span>
        </button>
    </div>
</div>